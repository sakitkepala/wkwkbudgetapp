{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@wkwkbudgetapp/data-access": ["libs/data-access/src/index.ts"],
      "@wkwkbudgetapp/database": ["libs/database/src/index.ts"],
      "@wkwkbudgetapp/global-styles": ["libs/global-styles/src/index.ts"],
      "@wkwkbudgetapp/graphql": ["libs/graphql/src/index.ts"],
      "@wkwkbudgetapp/screens/auth-login": [
        "libs/screens/auth-login/src/index.ts"
      ],
      "@wkwkbudgetapp/screens/auth-register": [
        "libs/screens/auth-register/src/index.ts"
      ],
      "@wkwkbudgetapp/screens/dashboard": [
        "libs/screens/dashboard/src/index.ts"
      ],
      "@wkwkbudgetapp/screens/home": ["libs/screens/home/src/index.ts"],
      "@wkwkbudgetapp/tests": ["libs/tests/src/index.ts"],
      "@wkwkbudgetapp/ui": ["libs/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
